---
import ConsoleLayout from '@/layouts/ConsoleLayout.astro';
import PostCard from '@/components/content/PostCard.astro';
import { getCollection } from 'astro:content';
import { withBase } from '@/lib/utils';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);

  // Get all unique tags
  const tags = [...new Set(posts.flatMap((post) => post.data.tags || []))];

  return tags.map((tag) => ({
    params: { tag },
    props: {
      tag,
      posts: posts.filter((post) => post.data.tags?.includes(tag)),
    },
  }));
}

interface Props {
  tag: string;
  posts: Awaited<ReturnType<typeof getCollection<'blog'>>>;
}

const { tag, posts } = Astro.props;
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<ConsoleLayout title={`#${tag}`} description={`Posts tagged with ${tag}`}>
  <div class="tag-header">
    <a href={withBase("/blog")} class="back-link">‚Üê Back to posts</a>
    <h1>{tag}</h1>
    <p class="post-count">{posts.length} post{posts.length !== 1 ? 's' : ''}</p>
  </div>

  <div class="posts-grid">
    {sortedPosts.map((post) => (
      <PostCard
        slug={post.slug}
        title={post.data.title}
        description={post.data.description}
        pubDate={post.data.pubDate}
        tags={post.data.tags}
      />
    ))}
  </div>
</ConsoleLayout>

<style>
  .tag-header {
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-md);
    border-bottom: 1px solid var(--border-color);
  }

  .back-link {
    display: inline-block;
    color: var(--text-muted);
    font-size: var(--font-size-sm);
    margin-bottom: var(--space-sm);
    text-decoration: none;
  }

  .back-link:hover {
    color: var(--color-primary);
  }

  .tag-header h1 {
    margin: 0;
    font-size: var(--font-size-xl);
    color: var(--color-primary);
  }

  .post-count {
    color: var(--text-muted);
    font-size: var(--font-size-sm);
    margin: var(--space-xs) 0 0;
  }

  .posts-grid {
    display: grid;
    gap: var(--space-md);
  }
</style>
