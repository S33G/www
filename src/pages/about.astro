<style>
  .about-content {
    max-width: 100%;
  }

  .about-header {
    display: flex;
    gap: var(--space-lg);
    align-items: center;
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--border-color);
  }

  .ascii-portrait {
    font-size: var(--font-size-sm);
    line-height: 1.2;
    color: var(--color-primary);
    margin: 0;
    font-family: var(--font-mono);
  }

  .about-intro h1 {
    margin: 0 0 var(--space-xs);
    color: var(--text-primary);
    font-size: var(--font-size-xl);
  }

  .tagline {
    color: var(--text-muted);
    margin: 0;
  }

  .about-section {
    margin-bottom: var(--space-lg);
  }

  .about-section h2 {
    color: var(--text-primary);
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-sm);
  }

  .about-section p {
    color: var(--text-secondary);
    line-height: 1.7;
  }

  .value-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--space-sm);
  }

  .value-list li {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    padding: var(--space-sm) var(--space-md);
    color: var(--text-secondary);
  }

  .skills-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .skill-tag {
    background: var(--ascii-tint);
    border: 1px solid var(--border-color);
    padding: var(--space-xs) var(--space-sm);
    border-radius: 6px;
    font-size: var(--font-size-sm);
    color: var(--color-primary);
  }

  .projects-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--space-md);
  }

  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--space-sm);
  }

  .project-name {
    font-weight: 600;
    color: var(--color-primary);
  }

  .project-date {
    color: var(--text-muted);
    font-size: var(--font-size-sm);
    white-space: nowrap;
  }

  .project-desc {
    color: var(--text-secondary);
    margin: var(--space-xs) 0 0;
    line-height: 1.6;
  }

  .timeline {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: var(--space-md);
  }

  .timeline-title {
    display: inline-block;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--space-xs);
  }

  .timeline p {
    margin: 0;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .contact-links {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
  }

  .contact-links a {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--bg-primary);
    border: 1px solid var(--border-color);
    border-radius: var(--border-radius-sm);
    color: var(--text-primary);
    font-weight: 500;
    transition: all 0.15s ease;
  }

  .contact-links a:hover {
    border-color: var(--color-primary);
    color: var(--color-primary);
  }

  .contact-copy {
    color: var(--text-muted);
    margin-bottom: var(--space-sm);
  }

  @media (max-width: 640px) {
    .about-header {
      flex-direction: column;
      text-align: center;
    }

    .ascii-portrait {
      font-size: 0.6rem;
    }

    .skills-grid {
      justify-content: center;
    }

    .contact-links {
      justify-content: center;
    }
  }
</style>
