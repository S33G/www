---
import type { EffectType } from '@/lib/ascii';
import ASCIIBackground from './ASCIIBackground';

interface Props {
  effect?: EffectType;
}

const { effect = 'wave' } = Astro.props;
---

<ASCIIBackground client:load effect={effect} />

<style is:global>
  .ascii-background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    opacity: 0.6;
    transition: opacity 0.3s ease;
  }

  @media (prefers-reduced-motion: reduce) {
    .ascii-background {
      opacity: 0.2;
      transition: none;
    }
  }
</style>
